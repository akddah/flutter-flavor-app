    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Development",
            "request": "launch",
            "flutterMode": "debug",
            "type": "dart",
            "args": [
                "--flavor",
                "dev",
                "--target",
                "${workspaceFolder}/lib/main_dev.dart"
            ]
        },
        {
            "name": "Launch Production",
            "request": "launch",
            "flutterMode": "debug",
            "type": "dart",
            "args": [
                "--flavor",
                "prod",
                "--target",
                "${workspaceFolder}/lib/main_prod.dart"
            ]
        }
    ]
}